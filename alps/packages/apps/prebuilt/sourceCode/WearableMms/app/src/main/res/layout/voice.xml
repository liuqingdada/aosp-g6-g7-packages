<?xml version="1.0" encoding="utf-8"?>
<com.mstarc.wearablemms.common.SwipeDismissLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:id="@+id/msg_voice_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:text="@string/msg_voice_hint"
        android:textSize="28sp" />

    <com.mstarc.wearablemms.common.WaveformView
        android:id="@+id/voice_wave"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="5dp"
        app:wave_speed="1"
        app:wave_height="2"
        android:layout_below="@+id/msg_voice_hint" />

    <ImageView
        android:id="@+id/voice_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@android:color/transparent" />
    </RelativeLayout>

</com.mstarc.wearablemms.common.SwipeDismissLayout>
