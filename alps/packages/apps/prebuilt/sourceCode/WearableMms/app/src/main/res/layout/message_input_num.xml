<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true">
    <EditText
        android:id="@+id/msg_chat2_contact"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_centerHorizontal="true"
        android:hint="@string/input_num"
        android:textColor="@android:color/white"
        android:textColorHint="#666666"
        android:gravity="center"
        android:textSize="22sp"
        android:textCursorDrawable="@drawable/editcursor"
        android:background="@null"
        android:clickable="false"
        android:focusable="false"/>
    <ImageView
        android:id="@+id/lineView"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/msg_chat2_contact"
        android:background="@color/color_high_grag" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="13dp">
        <android.inputmethodservice.KeyboardView
            android:id="@+id/keyboard_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="@android:color/black"
            android:keyBackground="@android:color/transparent"
            android:keyTextColor="@android:color/white" />
    </RelativeLayout>

</RelativeLayout>
