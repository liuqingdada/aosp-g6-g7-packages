<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_background"
    android:clickable="true"
    android:minHeight="72dp">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/msg_chat2_profile"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:src="@mipmap/icon_wechat_avata_sent"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/msg_chat2_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/msg_chat2_profile"
        android:layout_marginLeft="10dp"
        android:textColor="@color/main_highlight"
        android:text="@string/contract_demo2"
        android:textSize="24sp" />
    <TextView
        android:id="@+id/msg_chat2_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:layout_toStartOf="@+id/msg_chat1_date"
        android:textColor="@color/activity_text_color"
        android:text="@string/msg_time_demo"
        android:textSize="22sp" />
    <TextView
        android:id="@+id/msg_chat1_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/activity_text_color"
        android:text="@string/msg_date_demo"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/msg_chat2_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="@string/msg_chat_demo1"
        android:textColor="@color/activity_text_color"
        android:textSize="24sp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/msg_chat2_profile"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/voice_button"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@android:color/transparent"
        android:src="@mipmap/icon_wechat_voice_1" />


</RelativeLayout>
