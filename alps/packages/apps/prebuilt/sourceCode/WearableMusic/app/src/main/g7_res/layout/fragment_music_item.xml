<?xml version="1.0" encoding="utf-8"?>
<swipereveallayout.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:modeSwipe="same_level"
    app:dragEdge="right"
    android:id="@+id/swipe_layout"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="76dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/item_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:background="@color/activity_background"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/music_badge_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:src="@drawable/icon_music_badge"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:id="@+id/record_name_view"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:marqueeRepeatLimit="marquee_forever"
            android:textSize="24sp"
            android:layout_marginEnd="10dp"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:singleLine="true"
            android:textColor="#ffff"
            android:text="@string/demo_name"/>
    </LinearLayout>

</swipereveallayout.SwipeRevealLayout>