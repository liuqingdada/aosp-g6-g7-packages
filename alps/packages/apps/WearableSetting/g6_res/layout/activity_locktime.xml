<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context="com.mstarc.wearablesettings.activitys.LockTimeActivity">
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:gravity="center"
        android:text="@string/locktime"
        android:textColor="#ffffff"
        android:textSize="30px"/>
    <TextView
        android:id="@+id/tv_dv"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginTop="78px"
        android:background="@mipmap/dv"/>
    <com.mstarc.wearablesettings.views.WheelView
        android:id="@+id/wv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_title"
        app:isCyclic="false"
        app:itemNumber="3"
        app:lineHeight="0dp"
        app:noEmpty="true"
        app:normalTextColor="#ffffff"
        app:normalTextSize="30px"
        app:selectedTextColor="#e7c270"
        app:selectedTextSize="36px"
        app:unitHeight="81px"
    />
    <TextView
        android:id="@+id/tv_top"
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:layout_marginTop="160px"
        android:background="@mipmap/jianbiantiao"/>
    <TextView
        android:id="@+id/tv_bot"
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:layout_marginTop="237px"
        android:background="@mipmap/jianbiantiao"/>
</RelativeLayout>
