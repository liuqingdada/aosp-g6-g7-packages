<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:gesture="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    >
    <com.mstarc.wearablesettings.views.LocusPassWordView
        android:id="@+id/locusPassWordView"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/tip"
        android:layout_alignParentTop="true"
        android:textSize="24sp"
        android:textColor="@color/color_pass_tip"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/error_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/password_error_bg"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:textSize="28sp"
        android:text="@string/password_error_info"
        android:visibility="gone"
        android:onClick="errorInfoClick"
        />
</RelativeLayout>