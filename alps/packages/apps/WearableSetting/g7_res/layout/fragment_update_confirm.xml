<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mstarc.wearablesettings.activitys.SystemUpdateActivity"
    android:background="@android:color/black">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/update_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:textSize="26sp"
        android:textColor="@color/color_high_grag"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:textColor="#dedede"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="26sp"
        />
    <ScrollView
        android:id="@+id/scrollcontent"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:layout_below="@+id/version"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:scrollbarSize="8dp"
        android:scrollbarStyle="insideOverlay"
        android:scrollbars="vertical"
        android:scrollbarTrackVertical="@drawable/main_scrollbar_tracker"
        android:scrollbarThumbVertical="@drawable/main_scrollbar_thumb"
        android:verticalScrollbarPosition="left"
        >
        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#dedede"
            android:textSize="22sp"
            />
    </ScrollView>
    <TextView
        android:id="@+id/tip1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:textColor="#dedede"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:text="@string/update_tip1"
        android:textSize="22sp"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/tip2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tip1"
        android:textColor="#dedede"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:text="@string/update_tip2"
        android:textSize="22sp"
        android:visibility="gone"
        />
    <ImageView
        android:id="@+id/imagesure"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="47dp"/>

    <ImageView
        android:id="@+id/imagecancel"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="47dp"/>
    <ImageView
        android:id="@+id/startupdate"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="27dp"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>
</RelativeLayout>
