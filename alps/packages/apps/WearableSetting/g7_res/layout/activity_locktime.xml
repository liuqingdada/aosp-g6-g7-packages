<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context="com.mstarc.wearablesettings.activitys.LockTimeActivity">
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:gravity="center"
        android:text="@string/locktime"
        android:textColor="#ffffff"
        android:textSize="28px"/>
    <TextView
        android:id="@+id/tv_dv"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginTop="60px"
        android:background="@mipmap/dv"/>
    <com.mstarc.wearablesettings.views.WheelView
        android:id="@+id/wv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="58px"
        app:isCyclic="false"
        app:itemNumber="3"
        app:lineColors="#000"
        app:lineHeight="4px"
        app:noEmpty="true"
        app:normalTextColor="#ffffff"
        app:normalTextSize="30px"
        app:selectedTextColor="#e7c270"
        app:selectedTextSize="52px"
        app:unitHeight="90px"
    />
    <TextView
        android:id="@+id/tv_top"
        android:layout_width="match_parent"
        android:layout_height="4px"
        android:layout_marginTop="152px"
        android:background="@mipmap/jianbian_red"/>
    <TextView
        android:id="@+id/tv_bot"
        android:layout_width="match_parent"
        android:layout_height="4px"
        android:layout_marginTop="246px"
        android:background="@mipmap/jianbian_red"/>
</RelativeLayout>
