<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mstarc.wearablesettings.activitys.KeyBoardActivity">

    <ImageView
        android:id="@+id/lineView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="102dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="92dp"
        android:layout_width="wrap_content"
        android:background="@color/color_high_grag"
        android:layout_height="2dp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lineView"
        android:layout_alignStart="@+id/lineView"
        android:layout_alignEnd="@+id/lineView"
        android:layout_marginBottom="2dp"
        android:gravity="center"
        android:focusable="false"
        android:clickable="false"
        android:background="@null"
        android:textColor="@android:color/white"
        android:textSize="22sp" />

    <ImageView
        android:id="@+id/password_sure"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="27dp"
        android:onClick="sureClick" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <android.inputmethodservice.KeyboardView
            android:id="@+id/keyboard_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="@mipmap/keyboardbg"
            android:keyBackground="@android:color/transparent"
            android:keyTextColor="@android:color/white" />
    </RelativeLayout>
</RelativeLayout>
