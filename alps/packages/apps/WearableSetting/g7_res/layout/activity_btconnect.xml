<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mstarc.wearablesettings.activitys.SettingsActivity"
    android:background="@android:color/black">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:id="@+id/titlelayout">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="40dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/lanya"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="38dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/kaiguanbg"/>
        <ImageView
            android:id="@+id/iv_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="38dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/lineView"
        android:layout_below="@+id/titlelayout"
        android:layout_width="match_parent"
        android:background="@color/color_high_grag"
        android:layout_height="2dp" />
    <ImageView
        android:id="@+id/loading"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="75dp"
        android:src="@mipmap/dengdai"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/scanresult"
        android:layout_below="@+id/lineView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarSize="8dp"
        android:scrollbarStyle="insideOverlay"
        android:scrollbars="vertical"
        android:scrollbarTrackVertical="@drawable/main_scrollbar_tracker"
        android:scrollbarThumbVertical="@drawable/main_scrollbar_thumb"
        android:verticalScrollbarPosition="left"/>

</RelativeLayout>
