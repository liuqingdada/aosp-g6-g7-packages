<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8000">
<!--080304-->

    <TextView
        android:text="@string/select_device_to_dial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="95dp"
        android:textColor="#fff"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:id="@+id/notification_clean_text" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="40dp"
        android:layout_below="@+id/notification_clean_text"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_marginLeft="4dp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerVertical="true" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:tint="?attr/themecolor"
            android:src="@drawable/ic_phone_dial_by_phone"
            android:id="@+id/dial_by_phone"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="?attr/themecolor"
            android:src="@drawable/ic_phone_dial_by_watch"
            android:background="@android:color/transparent"
            android:id="@+id/dial_by_watch"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</RelativeLayout>
