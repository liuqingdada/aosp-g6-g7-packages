<!-- Background that shows the header and title -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/HeaderAndTitleContainer">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/header"
            style="@style/HeaderImage"/>
        <ImageView
            style="@style/HeaderImageTile"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/title"
            android:text="@string/setup_work_space"
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Title"/>
        <Space
            android:layout_weight="10"
            android:layout_width="0dp"
            android:layout_height="fill_parent"/>
    </LinearLayout>
</LinearLayout>