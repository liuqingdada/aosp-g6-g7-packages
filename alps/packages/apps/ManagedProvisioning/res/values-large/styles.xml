<resources>

    <!-- Same as the one in ../values/styles.xml -->
    <style name="SetupWorkSpaceTheme" parent="@android:style/Theme.Material" >
      <item name="android:windowActionBar">false</item>
      <item name="android:windowNoTitle">true</item>
      <item name="android:colorPrimary">@color/teal</item>
      <item name="android:colorAccent">@color/dark_turquoise</item>
      <item name="android:colorPrimaryDark">@color/light_teal</item>
    </style>

    <style name="HeaderImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:scaleType">fitStart</item>
        <item name="android:src">@drawable/setup_illustration</item>
    </style>

    <style name="HeaderImageTile">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:gravity">left</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@drawable/setup_illustration_right</item>
    </style>

</resources>
