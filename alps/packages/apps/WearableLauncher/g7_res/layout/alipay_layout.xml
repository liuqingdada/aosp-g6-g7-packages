<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/background"
    android:minHeight="340dp"
    android:minWidth="272dp"
    android:orientation="vertical"
    android:translationZ="10dp">

    <RelativeLayout
        android:id="@+id/normal_view"
        android:layout_width="272dp"
        android:layout_height="340dp">

        <TextView
            android:id="@+id/alipay_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textColor="#fff"
            android:text="@string/leftboard_alipay_time_demo"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:scaleType="center" />

        <TextView
            android:id="@+id/alipay_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:text="@string/leftboard_alipay_title_demo0"
            android:textAlignment="center"
            android:textColor="#F7CE71"
            android:textSize="25sp" />
    </RelativeLayout>

    <ViewStub
        android:id="@+id/bound"
        android:layout_width="272dp"
        android:layout_height="340dp"
        android:minHeight="340dp"
        android:inflatedId="@+id/process"
        android:layout="@layout/alipay_bound_view" />
</RelativeLayout>