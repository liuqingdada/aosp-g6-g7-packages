<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="166dp"
    android:minWidth="166dp"
    android:layout_height="match_parent"
    android:minHeight="340dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/watchface_thumb"
        android:layout_width="133dp"
        android:layout_height="166dp"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp" />

    <TextView
        android:id="@+id/watchface_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/watchface_preview_demo"
        android:layout_marginTop="23dp"
        android:textSize="26sp"
        android:layout_below="@+id/watchface_thumb"
        android:visibility="gone"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/watchface_setting"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_watchface_setting"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:layout_centerHorizontal="true" />
</RelativeLayout>