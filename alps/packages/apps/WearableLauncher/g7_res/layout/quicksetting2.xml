<?xml version="1.0" encoding="utf-8"?>
<com.mstarc.wearablelauncher.view.quicksetting.QuickSettingMode xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginEnd="23dp"
        android:layout_marginTop="48dp"
        android:layout_centerHorizontal="true">
        <ImageView
            android:id="@+id/qs2_wifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/ic_background"/>
        <ImageView
            android:id="@+id/qs2_signal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ic_background"/>

        <ImageView
            android:id="@+id/qs2_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/ic_background"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/qs2_volume_dec"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_alignParentStart="true" />
        <ProgressBar
            android:id="@+id/qs2_progressBar"
            android:layout_width="164dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:progress="60"
            style="?android:attr/progressBarStyleHorizontal"
            android:progressDrawable="@drawable/qs1_progress" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/qs2_volume_add"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/qs2_mute"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:scaleType="center"
            android:background="@drawable/ic_background" />

        <ImageView
            android:id="@+id/qs2_music"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ic_background"
            android:scaleType="center" />

        <ImageView
            android:id="@+id/qs2_zhendong"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="center"
            android:layout_alignParentTop="true"
            android:background="@drawable/ic_background"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>


</com.mstarc.wearablelauncher.view.quicksetting.QuickSettingMode>