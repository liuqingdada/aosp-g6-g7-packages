<?xml version="1.0" encoding="utf-8"?>
<com.mstarc.wearablelauncher.view.quicksetting.QuickSettingPower xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="84dp"
        android:layout_marginTop="60dp"
        android:id="@+id/statuelayout"
        android:layout_centerHorizontal="true">
        <ImageView
            android:id="@+id/qs2_signal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
        <ImageView
            android:id="@+id/qs1_phonebuttary_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/qs1_watchbuttary_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <TextView
        android:id="@+id/qs1_nosim_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="210dp"
        android:layout_marginTop="110dp"
        android:layout_alignParentEnd="true"
        android:text="@string/str_nosim"
        android:textSize="24sp"
        android:textColor="#fff"/>
    <TextView
        android:id="@+id/qs1_watchbuttary_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="45dp"
        android:layout_marginTop="110dp"
        android:layout_alignParentEnd="true"
        android:text="@string/qs1_watch_battery"
        android:textSize="24sp"
        android:textColor="#fff"/>

    <ProgressBar
        android:id="@+id/qs1_progressBar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:progress="60"
        style="?android:attr/progressBarStyleHorizontal"
        android:progressDrawable="@drawable/qs1_progress" />

    <ImageButton
        android:id="@+id/qs1_watchmode"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp"
        android:background="@drawable/ic_background"
        android:layout_marginStart="13dp" />

    <ImageButton
        android:id="@+id/qs1_normalmode"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignTop="@id/qs1_watchmode"
        android:background="@drawable/ic_background"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/qs1_flightmode"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/qs1_watchmode"
        android:background="@drawable/ic_background"
        android:layout_marginRight="13dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/qs1_light_low"
        android:layout_centerVertical="true"
        android:layout_marginStart="4dp"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/qs1_light_high"
        android:layout_centerVertical="true"
        android:layout_marginEnd="4dp"
        android:layout_alignParentEnd="true" />

</com.mstarc.wearablelauncher.view.quicksetting.QuickSettingPower>
