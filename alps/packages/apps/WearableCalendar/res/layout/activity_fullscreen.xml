<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222222"
    android:layout_marginStart="-1dp"
    android:layout_marginEnd="-1dp"
    tools:context="com.mstarc.mstarc.calendar.FullscreenActivity">

    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mcv_showOtherDates="defaults"
        app:mcv_selectionColor="#88e3bd68"
        app:mcv_arrowColor="@color/white_30_transparent"
        app:mcv_headerTextAppearance="@style/HeadTitle"
        app:mcv_dateTextAppearance="@style/DateTitle"
        app:mcv_weekDayTextAppearance="@style/DateTitle"
        app:mcv_weekDayLabels="@array/weeklable"
        app:mcv_rightArrowMask="@color/right_selector"
        app:mcv_leftArrowMask="@color/left_selector"
        />
</FrameLayout>
