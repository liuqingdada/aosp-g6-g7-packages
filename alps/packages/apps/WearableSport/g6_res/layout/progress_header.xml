<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/header"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    tools:showIn="@layout/sportprogress">

    <ImageView
        android:id="@+id/progress_type_icon"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="27dp" />

    <TextView
        android:id="@+id/text_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="26dp"
        android:textSize="26sp"
        android:layout_toEndOf="@+id/progress_type_icon"
        android:text="@string/sport_progress_time_demo" />

    <ImageView
        android:id="@+id/sport_progress_header_timer"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/text_time"
        android:layout_marginStart="2dp"
        android:layout_marginTop="15dp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/sport_progress_heart_icon"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/progress_type_icon"
        android:layout_marginEnd="76dp"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/text_heartbit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="36sp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="18dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="257dp"
        android:text="@string/sport_progress_heartbit_demo" />
</RelativeLayout>