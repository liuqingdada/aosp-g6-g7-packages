<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:minWidth="320dp"
    android:minHeight="43dp"
    android:layout_height="70dp">

    <TextView
        android:id="@+id/sport_progress_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="33dp"
        android:text="@string/sport_progress_item_bushu"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/sport_progress_item_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:text="@string/sport_progress_zero"
        android:textColor="#ffd581"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/sport_progress_item_danwei"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="260dp"
        android:text="@string/sport_progress_item_qianka"
        android:textSize="22sp" />

</RelativeLayout>