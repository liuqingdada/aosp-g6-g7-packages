<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/sport_scroll_3"
        android:textAlignment="center"
        android:textSize="110sp" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/sport_scroll_2"
        android:textAlignment="center"
        android:textSize="110sp" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/sport_scroll_1"
        android:textAlignment="center"
        android:textSize="110sp" />

    <ViewStub
        android:id="@+id/prosess_stub"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inflatedId="@+id/process"
        android:layout="@layout/sportprogress" />

    <ViewStub
        android:id="@+id/prosess_ride_stub"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inflatedId="@+id/process"
        android:layout="@layout/sportprogress_ride" />
</RelativeLayout>