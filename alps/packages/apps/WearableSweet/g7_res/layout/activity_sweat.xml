<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_background"
    tools:context=".SweatProfileActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/person_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/activity_text_female"
            android:text="@string/sweat_people"
            android:textSize="26sp"
            android:layout_marginTop="6dp"/>

        <ImageView
            android:id="@+id/person_avata"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginTop="25dp"/>

        <TextView
            android:id="@+id/person_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/activity_text_color"
            android:textSize="26sp"
            android:layout_marginTop="16dp"/>
    </LinearLayout>


    <TextView
        android:id="@+id/img_unbind"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:text="@string/demo_sweat_unbind"
        android:gravity="center"
        android:textSize="28sp"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
